extends ../base

block content
  .page-header
    h1 Chats

  .container-full
    .col-sm-3
      h3 Your Chats
      if groups && groups.length > 0
        ul.list-group
          each group in groups
            .list-group-item
              a.col-xs-12.course-box.flex-column(href=`/chats/${group.id}`)
                h4.list-group-item-heading #{group.name}
                if group.description
                  p.list-group-item-text #{group.description}
      else
        p You are not in any chats.
    .col-sm-9   
        form.chat.horizontal(method='POST', action='')
            .chat-group
                label.col-sm-2.control-label(for='name') Group name here 
                //the type/name/id neeeds to be changed.
                input.form-control(type='name', name='name', id='name', placeholder='Send a message!', required)


