extends ../base

block content
  .page-header
    h3 #{user.firstName} #{user.lastName}
  - const email = user.privacyShowEmail ? user.email : 'hidden'
  h4 Email: #{email}
  - const major = user.major || 'unset'
  h4 Major: #{major}
  form.form-horizontal(method='POST', action=`/profile/${user.id}/chat`)
    .form-group
      .col-sm-offset-3.col-sm-6
        button.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Start a chat
