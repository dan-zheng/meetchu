extends base

block content
  if user
    .page-header
      h1 Home
    h3 Hello, #{user.dataValues.firstName}!
    p Your email is #{user.dataValues.email}.
    .btn-group
      a.btn.btn-primary(href='/account', role='button')
        i.fa.fa-id-card-o
        | Profile
      a.btn.btn-primary(href='/logout', role='button')
        i.fa.fa-sign-out
        | Log out
    hr
  else
    .text-center
      h1#title Group study made easy.
      p#subtitle Meetchu simplifies messaging and scheduling so you can spend less time looking at the calendar and more time getting your work done.
      .row.text-center
        img(src='meetchu.svg', style='max-width: 80%;')
      a.btn.btn-lg.btn-primary(href='/login', role='button') Get started
