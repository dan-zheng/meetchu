extends base

block content
  if user
    .page-header
      h1 Home
    h3 Hello, #{user.dataValues.firstName}!
    p Your email is #{user.dataValues.email}.
    .btn-group
      a.btn.btn-primary(href='/account', role='button')
        i.fa.fa-id-card-o
        | Profile
      a.btn.btn-primary(href='/logout', role='button')
        i.fa.fa-sign-out
        | Log out
    hr
    .col-sm-3 
      h3 Your Notifications
      if notifications && notifications.length > 0 
        ul.list-notification
          each notification in notifications
            .list-notification-item 
              // a.col-xs-12.course.flex-column(href=`/chats/${notification.id}`)
              h4.list-notification-item-heading #{notification.message} 
      else
        p You have no notifications.
  else
    .text-center
      h1#title Group study made easy.
      p#subtitle Meetchu simplifies messaging and scheduling so you can spend less time looking at the calendar and more time getting your work done.
      .row.text-center
        img(src='meetchu.svg', style='max-width: 80%;')
      a.btn.btn-lg.btn-primary(href='/login', role='button') Get started
     
  .col-sm-3 
    h3 Your Notifications
    if notifications && notifications.length > 0 
      ul.list-notification
        each notification in notifications
          .list-notification-item 
            a.col-xs-12.course.flex-column(href=`/chats/${notification.id}`)
              h4.list-notification-item-heading #{notification.text} 
              if notification.description
                p.list-notification-item-text #{notification.description}
    else
      p YOU GOT NO NOTES BRAH 
    
  .col-sm-9
    h3 Create a notification
      form.form-horizontal(method='POST', action='/notifications/create')
        .form-group
          label.col-sm-2.control-label(for='name') Name
          .col-sm-6
            input.form-control(type='name', name='name', id='name', placeholder='Name', required)
        .form-group
          label.col-sm-2.control-label(for='description') Description
          .col-sm-6
            input.form-control(type='description', name='description', id='description', placeholder='A short description')
        .form-group
          .col-sm-offset-2.col-sm-6
            button.btn.btn-primary(type='submit')
              i.fa.fa-plus
              | Create

